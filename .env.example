# OpenAI API Key (for CrewAI agents)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Serper API Key (for web search tool)
# Get from: https://serper.dev/api-key
SERPER_API_KEY=your_serper_api_key_here

# Supabase URL
# Get from: Supabase Dashboard > Settings > API > Project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous Key
# Get from: Supabase Dashboard > Settings > API > Project API keys > anon/public
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role Key (optional - for admin operations)
# Get from: Supabase Dashboard > Settings > API > Project API keys > service_role
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database URL (optional - for direct PostgreSQL connections)
# Get from: Supabase Dashboard > Settings > Database > Connection string > URI
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project-id.supabase.co:5432/postgres

# Resend API Key (optional - for email notifications)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# From Email Address (optional - for email notifications)
# Must be verified in Resend (use onboarding@resend.dev for testing)
FROM_EMAIL=onboarding@resend.dev

# Agent Model Configuration (optional - override default models)
# Format: openai/gpt-4o, openai/gpt-4o-mini, anthropic/claude-3-5-sonnet, etc.
# If not set, defaults from agents.yaml will be used

COURSE_INTELLIGENCE_AGENT_MODEL=openai/gpt-4o
RESOURCE_DISCOVERY_AGENT_MODEL=openai/gpt-4o-mini
RESOURCE_VALIDATOR_AGENT_MODEL=openai/gpt-4o-mini
OUTPUT_FORMATTER_AGENT_MODEL=openai/gpt-4o-mini
MAX_CREW_ITERATIONS=10
